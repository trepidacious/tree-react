{
  "name": "scalajs-electron-react-app",
  "productName": "ScalaJS Electron React App",
  "version": "0.0.1",
  "description": "Demo of an Electron app using React from Scalajs",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl --ia32 --x64"
  },
  "keywords": [],
  "author": "trepidacious",
  "license": "MIT",
  "build": {
    "appId": "org.rebeam.scalajs-electron-react-app",
    "files": [
      "src",
      "scalajs_src",
      "assets"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Development",
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://updateserver.local:8080/scalajs-electron-react-app"
      }
    ]
  },
  "dependencies": {
    "@material-ui/core": "^3.1.2",
    "@material-ui/icons": "^3.0.1",
    "downshift": "^2.1.5",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.17",
    "electron-react-titlebar": "^0.8.1",
    "electron-updater": "^3.1.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.28.4",
    "http-server": "^0.11.1"
  }
}
